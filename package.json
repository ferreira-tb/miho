{
  "name": "miho",
  "description": "Repository management tools",
  "version": "4.1.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.2",
  "scripts": {
    "format": "prettier . --write && cargo fmt",
    "mock:bump": "cargo run -- bump -p mocks --no-commit",
    "mock:update": "cargo run -- update -p mocks",
    "pedantic": "cargo clippy -- -W clippy::pedantic",
    "prepare": "husky",
    "release": "cargo test && cargo clippy && cargo publish"
  },
  "devDependencies": {
    "husky": "^9.0.10",
    "prettier": "^3.2.5"
  }
}
