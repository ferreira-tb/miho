{
  "name": "miho",
  "description": "Repository management tools",
  "version": "4.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "format": "prettier . --write && cargo fmt --all",
    "mock": "cargo run -- bump -i mocks --no-commit",
    "prepare": "husky",
    "release": "cargo test && cargo clippy && cargo publish -p miho_derive && cargo publish -p miho"
  },
  "devDependencies": {
    "husky": "^9.0.10",
    "prettier": "^3.2.5",
    "taze": "^0.13.3"
  }
}
